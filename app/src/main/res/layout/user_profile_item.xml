<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/user_profile_item_layout"
        android:background="@color/bright_foreground_material_dark"
        android:weightSum="6"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:baselineAligned="false"
        android:paddingBottom="@dimen/abc_button_padding_horizontal_material">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/user_profile"
            android:layout_weight="3"

            android:background="@color/bright_foreground_material_dark">
            <ImageView
                android:id="@+id/user_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/user_profile_picture_height"
                android:paddingLeft="@dimen/abc_button_padding_horizontal_material"
                android:paddingTop="@dimen/abc_button_padding_horizontal_material" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"

            android:orientation="vertical"
            android:layout_marginTop="@dimen/activity_names_margin_top"
            android:layout_marginEnd="@dimen/abc_action_bar_overflow_padding_start_material"
            android:layout_marginRight="@dimen/abc_action_bar_overflow_padding_start_material">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/first_name"
                android:text="@string/first_name"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="@dimen/abc_action_bar_overflow_padding_start_material" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/last_name"
                android:text="@string/last_name"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="@dimen/abc_action_bar_overflow_padding_start_material" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>